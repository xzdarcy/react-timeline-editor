{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "declarationDir": "./dist/dts",
    "allowJs": true,
    "strict": false,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["src/*"],
      "@@/*": ["src/.umi/*"],
      "react": ["./node_modules/@types/react"]
    }
  },
  "exclude": ["node_modules", "lib", "es", "dist", "docs", "typings", "**/__test__", "test", "tests"],
  "include": ["src/**/*", "docs/**/*"]
}
